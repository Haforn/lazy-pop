<!DOCTYPE html>
<html>
	<head>
	  <title>Lazy pop | <%= @page_title %></title>
	</head>
	<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no"/>
	<%= stylesheet_link_tag('application', :media => 'all') %>
	<%= javascript_include_tag('application') %>
<body>

<%# debug(params) %>
	
	<header>

	<% if session[:user_id] %>
		<%= link_to("Log out", {:controller => 'access', :action => 'logout'}, :class => 'btn link logout') %>
	<% end %>

		<h1>Lazy pop</h1> 	
	
		</header>
		
			<% if !flash[:notice].blank? %> 
				<div class="notice">
					<%= flash[:notice] %>
				</div>
			<% end %>

			<% if !flash[:notice_fail].blank? %> 
				<div class="notice fail">
					<%= flash[:notice_fail] %>
				</div>
			<% end %>		

		
			<!-- before yield -->
			<%= yield %>
			<!-- after yield -->
	
	<footer>
	</footer>
</body>
</html>